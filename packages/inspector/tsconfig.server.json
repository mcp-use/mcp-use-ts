{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/server/**/*", "src/cli/**/*"],
  "exclude": ["src/client/**/*", "src/shared/**/*"]
}
